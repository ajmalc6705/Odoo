<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_product_form1">
			<field name="name">product.product.form</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="pragtech_dental_management.view_product_form1"/>
			<field name="type">form</field>
			<field name="arch" type="xml">
                <xpath expr="//field[@name = 'is_treatment']" position="after">
                    <field name="is_lab_test"/>
                </xpath>
            </field>
    </record>

    <record id="action_product_lab" model="ir.actions.act_window">
        <field name="name">Lab Tests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="context">{"default_is_lab_test":1,"search_default_is_lab_test":1}</field>
        <field name="domain">[('is_lab_test','=',1)]</field>
    </record>

    <menuitem name="Configuration" id="menu_lab_config" parent="laboratory.menu_laboratory" sequence="100"
              groups="pragtech_dental_management.group_dental_doc_menu,pragtech_dental_management.group_dental_mng_menu"/>
        <menuitem action="action_product_lab" sequence="2" parent="menu_lab_config" id="menu_product_lab_form"/>

</odoo>
