<odoo>
    <data>
        <record id="seq_appt_treatment_number" model="ir.sequence">
            <field name="name">Appt Treatment Number</field>
            <field name="code">appt_treatment_number_seq</field>
            <field name="prefix">T</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="appointment_form_view_inherited" model="ir.ui.view">
            <field name="name">medical.appointment.form</field>
            <field name="model">medical.appointment</field>
            <field name="inherit_id" ref="pragtech_dental_management.medical_appointment_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='followup']" position="after">
                    <field name="seq_treatment_number"/>
                    <button name="button_pending_treatment" string="Pending Treatment"
                            class="oe_highlight"
                            type="object"
                            attrs="{'invisible': [('have_pending_treatments', '=', 0)]}"
                            groups="pragtech_dental_management.group_dental_doc_menu,pragtech_dental_management.group_dental_mng_menu"/>
                </xpath>

                <xpath expr="//button[@name='appt_open_chart']" position="after">
                    <button name="action_view_treatment_plan" type="object" class="oe_stat_button"
                            icon="fa-pencil-square-o" string="Treatment Plans">
                    </button>
                </xpath>



                <xpath expr="//field[@name='patient_partner']" position="after">
                    <field name="have_pending_treatments" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='operations']" position="replace">
                    <separator string="Pending Treatments" colspan="4"/>
                    <field name="operation_ids">
                        <tree string='Planned Operations'>
                            <field name="tree_control" invisible="1"/>
                            <field name="appt_id" invisible="1"/>
                            <field name="patient_id" invisible="1"/>
                            <field name="create_date" invisible="1"/>
                            <field name="treatment_plan_number"/>
                            <field name="initial" string="Initial Examination"/>
                            <field name="child"/>
                            <field name="description"
                                   attrs="{'readonly': [('state', 'in', ('condition','in_progress','invoiced','completed'))]}"/>
                            <field name="tooth_line_order" invisible="1"/>
                            <field name="teeth_code_rel" widget="many2many_tags" string="Teeth"
                                   sort_by="tooth_line_order"
                                   attrs="{'required': [('tree_control', '=', 1)]}"/>
                            <field name="teeth_id" invisible="1"/>
                            <field name="diagnosis_id"/>
                            <field name="diagnosis_description"/>
                            <!-- <field name="tooth_function_field"/> -->
                            <field name="dentist" invisible="1"/>
                            <field name="detail_description" invisible="1"/>
                            <field name="actual_amount" invisible="1"/>
                            <field name="amount_edit" invisible="1"/>
                            <field name="unit_price" attrs="{'readonly':[('amount_edit','=',False)]}" force_save="1"/>

                            <field name="discount_fixed_percent"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"
                                   attrs="{'readonly': [('state', 'in', ('condition','in_progress','invoiced','completed'))]}"/>
                            <field name="discount" attrs="{'readonly':['|' , ('state', 'in', ('condition','in_progress','invoiced','completed')), ('discount_fixed_percent','!=','Percent')]}"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"/>
                            <field name="discount_value" attrs="{'readonly':['|', ('state', 'in', ('condition','in_progress','invoiced','completed')), ('discount_fixed_percent','!=','Fixed')]}"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"/>
                            <field name="amount" readonly="1" force_save="1"/>

                            <field name="state"/>
                            <field name="amt_paid_by_patient" readonly="1" invisible="1"/>
                            <field name="amt_to_be_patient" readonly="1" invisible="1"/>
                            <button name="action_go_back"
                                    groups="pragtech_dental_management.group_dental_mng_menu"
                                    type="object"
                                    class="fa fa fa-arrow-left"
                                    states="in_progress,completed"
                                    style="min-width: 40px;min-height: 25px;"/>
                            <button name="action_proceed" class="fa fa-arrow-right"
                                    style="min-width: 40px;min-height: 25px;"
                                    type="object" states="planned,in_progress"/>
                        </tree>
                    </field>
                    <separator string="Treatments added on this visit" colspan="4"/>
                    <field name="operations"
                           context="{'default_appt_id':id, 'default_tree_control':1, 'default_patient_id':patient}">
                        <tree string='Operations' editable="bottom"
                              decoration-info="(state == 'planned')"
                              decoration-success="(state == 'completed')"
                              decoration-warning="(state == 'in_progress')">
                            <field name="tree_control" invisible="1"/>
                            <field name="appt_id" invisible="1"/>
                            <field name="patient_id" invisible="1"/>
                            <field name="create_date" invisible="1"/>
                            <field name="treatment_plan_number"/>
                            <field name="initial" string="Initial Examination"/>
                            <field name="child"/>
                            <field name="description" options="{'no_create': True, 'no_create_edit':True}"
                                   attrs="{'readonly': [('state', 'in', ('condition','in_progress','invoiced','completed'))]}"/>
                            <field name="tooth_line_order" invisible="1"/>
                            <field name="teeth_code_rel" widget="many2many_tags" string="Teeth"
                                   sort_by="tooth_line_order"
                                   attrs="{'required': [('tree_control', '=', 1)]}"/>
                            <field name="teeth_id" invisible="1"/>
                            <field name="diagnosis_id"/>
                            <field name="diagnosis_description"/>
                            <!-- <field name="tooth_function_field"/> -->
                            <field name="dentist" invisible="1"/>
                            <field name="detail_description" invisible="1"/>
                            <field name="actual_amount" invisible="1"/>
                            <field name="amount_edit" invisible="1"/>
                            <field name="unit_price" attrs="{'readonly':[('amount_edit','=',False)]}" force_save="1"/>

                            <field name="discount_fixed_percent"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"
                                   attrs="{'readonly': [('state', 'in', ('condition','in_progress','invoiced','completed'))]}"/>
                            <field name="discount" attrs="{'readonly':['|' , ('state', 'in', ('condition','in_progress','invoiced','completed')), ('discount_fixed_percent','!=','Percent')]}"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"/>
                            <field name="discount_value" attrs="{'readonly':['|', ('state', 'in', ('condition','in_progress','invoiced','completed')), ('discount_fixed_percent','!=','Fixed')]}"
                                   groups="pragtech_dental_management.group_enable_discount_in_payment_lines"/>
                            <field name="amount" readonly="1" force_save="1"/>

                            <field name="state"/>
                            <field name="amt_paid_by_patient" readonly="1" invisible="1"/>
                            <field name="amt_to_be_patient" readonly="1" invisible="1"/>
                            <button name="action_go_back"
                                    groups="pragtech_dental_management.group_dental_mng_menu,pragtech_dental_management.group_dental_doc_menu"
                                    type="object"
                                    class="fa fa fa-arrow-left"
                                    states="in_progress,completed"
                                    style="min-width: 40px;min-height: 25px;"/>
                            <button name="action_proceed" class="fa fa-arrow-right"
                                    style="min-width: 40px;min-height: 25px;"
                                    type="object" states="planned,in_progress"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

    </data>
</odoo>