<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="watermark_template_for_company_100">
        <style>
                .watermark {
                    opacity: 0.50;
                    z-index: -1;
                    width: 10%;
                }
            </style>
        <div class="watermark">
            <t t-if="company.watermark">
                <t t-if = "company.watermark_option == 'backgroundimage'">
                    <img t-if="company.upload_image" t-att-src="'data:image/png;base64,%s' % to_text(company.upload_image)" style="top:100px;position:absolute;width:100%;opacity:0.25;"/>
                </t>
                <t t-if = "company.watermark_option == 'logo'">
                    <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="top:100px;position:absolute;width:100%;opacity:0.25;"/>
                </t>
                <t t-if = "company.watermark_option == 'name'">
                    <t t-if="company.font_size and not company.font_color">
                        <span t-field="company.name" t-att-style="'font-size:' + company.font_size + 'px;''top:500px;position:absolute;text-align:center;width:100%;absolute;opacity:0.25;'"/>
                    </t>
                    <t t-if="company.font_color and not company.font_size">
                        <span t-field="company.name" t-att-style="'color:' + company.font_color + ';' 'top:500px;position:absolute;text-align:center;width:100%;absolute;opacity:0.25;'"/>
                    </t>
                    <t t-if="company.font_size and company.font_color">
                        <span t-field="company.name" t-att-style="'font-size:' + company.font_size + 'px;' 'color:' + company.font_color + ';' 'top:500px;position:absolute;text-align:center;width:100%;absolute;opacity:0.25;'"/>
                    </t>
                    <t t-if="not company.font_size and not company.font_color">
                        <span t-field="company.name" t-att-style="'font-size:70px;top:500px;position:absolute;text-align:center;width:100%;absolute;opacity:0.25;'"/>
                    </t>
                </t>
            </t>
        </div>
    </template>

