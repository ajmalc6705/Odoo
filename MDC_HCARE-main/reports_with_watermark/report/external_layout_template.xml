    <template id="watermark_external_layout_background" inherit_id="web.external_layout_background">
        <xpath expr="//div[@class='article o_report_layout_background']" position="inside">
            <t t-call="reports_with_watermark.watermark_template_for_company_10"/>
        </xpath>
    </template>

