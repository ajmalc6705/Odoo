						<field name="date_start" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="date_end" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="company_id" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="doctor" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="based_on" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="detailed" attrs="{'invisible':[('state','=','get')]}"/>
						<field name="data" readonly="1" filename="name" attrs="{'invisible':[('state','=','choose')]}"/>
						<field name="treatment_categ_ids" widget="many2many_tags"
							   attrs="{'invisible': ['|',('based_on', '=', 'treatment'),('state', '=', 'get')]}"/>
						<field name="treatment_ids" widget="many2many_tags"
							   attrs="{'invisible': ['|',('based_on', '=', 'category'),('state', '=', 'get')]}"/>
						<field name="is_only_doctor" invisible="1"/>
						<field name="name" invisible="1"/>
						<field name="state" invisible="1"/>
					</group>
					<footer>
						<button name="print_report" string="Print PDF" type="object" class="btn-primary"
								attrs="{'invisible':[('state','=','get')]}"/>
						<button name="generate_backlog_excel_report" string="Excel" type="object" class="btn-primary"
								attrs="{'invisible':[('state','=','get')]}"/>
						<button string="Cancel" class="btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_income_by_combo_wizard_report" model="ir.actions.act_window">
			<field name="name">Income By Combo</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">income.by.combo.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_income_by_combo_report" action="action_income_by_combo_wizard_report"
				  parent="dental_report_menu" sequence="31" groups="pragtech_dental_management.group_dental_mng_menu"/>


		<record id="action_patient_by_procedure_wizard_report" model="ir.actions.act_window">
			<field name="name">Patient By Procedure</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">patient.by.procedure.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem id="menu_action_patient_by_procedure_report"
			action="action_patient_by_procedure_wizard_report" parent="dental_report_menu"
			sequence="15" groups="pragtech_dental_management.group_dental_mng_menu"/>

	</data>
</odoo>
