<odoo>
    <record id="view_employee_leave_policies_form" model="ir.ui.view">
        <field name="name">hr.employee.leave.policies.form</field>
        <field name="model">hr.employee.leave.policies</field>
        <field name="arch" type="xml">
            <form string="Employee Leave Policies">
                <sheet>
                    <group>
                        <group>
                            <field name="leave_type_id" required="1"/>
                            <field name="from_year_range" required="1"/>
                            <field name="to_year_range" required="1"/>
                        </group>
                        <group>
                            <field name="expire_from" required="1"/>
                            <field name="expire_to" required="1"/>
                            <field name="allocated_days" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_leave_policies_tree" model="ir.ui.view">
        <field name="name">hr.employee.leave.policies.tree</field>
        <field name="model">hr.employee.leave.policies</field>
        <field name="arch" type="xml">
            <tree string="Employee Leave Policies">
                <field name="leave_type_id"/>
                <field name="expire_from"/>
                <field name="expire_to"/>
            </tree>
        </field>
    </record>

    <record id="action_view_employee_leave_policies_form" model="ir.actions.act_window">
        <field name="name">Leave Policies</field>
        <field name="res_model">hr.employee.leave.policies</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_view_employee_leave_policies_form" id="menu_employee_leave_policies"
              parent="hr_holidays.menu_hr_holidays_configuration"
    />
</odoo>
