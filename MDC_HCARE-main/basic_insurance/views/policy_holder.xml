<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="policy_holder_view">
		<field name="name">Policy Holder</field>
		<field name="model">policy.holder</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
            <form string="Policy Holder">
				<sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="policy_no"/>
                        </group>
						<group/>
                    </group>
				</sheet>
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="policy_holder_tree">
		<field name="name">Policy Holder</field>
		<field name="model">policy.holder</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string='Policy Holder'>
				<field name="name"/>
				<field name="policy_no"/>
			</tree>
		</field>
	</record>

    <record id="view_policy_holder_filter" model="ir.ui.view">
		<field name="name">Policy Holder</field>
		<field name="model">policy.holder</field>
		<field name="type">search</field>
		<field name="arch" type="xml">
			<search string="Search Policy Holder">
				<field name="name"/>
				<field name="policy_no"/>
			</search>
		</field>
	</record>

	<record model="ir.actions.act_window" id="medical_action_policy_holder">
		<field name="name">Policy Holder</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">policy.holder</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="policy_holder_tree" />
	</record>
    <menuitem name="Policy Holder" id="medical_conf_policy_holder" action="medical_action_policy_holder"
			parent="basic_insurance.medical_conf_insurances" sequence="8" />
</odoo>
