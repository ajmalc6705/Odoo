<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_field_view_update" model="ir.ui.view">
            <field name="name">Field view update</field>
            <field name="model">field.view.update</field>
            <field name="arch" type="xml">
                <form string="Update View">
                    <separator string="Update Clinical Form View and Reports based on Fields added"/>
                    <group>
                        <label string="Click on Update below to start the process..." />
                    </group>
                    <footer>
                        <div>
                            <button name="design_dynamic_field_view" string="Update View" type="object" class="btn-primary"/>
                            <button name="design_dynamic_field_report" string="Update Report" type="object" class="btn-primary"/>
                            <button special="cancel" string="Cancel" class="btn-default"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_field_view_update" model="ir.actions.act_window">
            <field name="name">Field view update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">field.view.update</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="submenu3_consent_field" name="Views" parent="menu_consent_field" sequence="3" groups="pragtech_dental_management.group_dental_mng_menu,base.group_system"/>

        <menuitem name="Update Clinical Form View" action="action_view_field_view_update" id="menu_view_field_view_update"
            parent="submenu3_consent_field" sequence="2"/>

    </data>
</odoo>
