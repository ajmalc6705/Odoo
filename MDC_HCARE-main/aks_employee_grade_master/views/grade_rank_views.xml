<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- this is for form view of Grade -->
    <record id="employee_grade_form_view" model="ir.ui.view">
        <field name="name">employee.grade.form</field>
        <field name="model">hr.grade.grade</field>
        <field name="arch" type="xml">
            <form string="Employees Grade">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ranks">
                            <field name="rank_ids" widget="one2many" mode="tree">
                                <tree string="Ranks" editable="bottom">
                                    <field name="name"/>
                                    <field name="salary_range"/>
                                    <field name="description"/>
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="description" placeholder="Description"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- this is for tree view of Grade -->
    <record id="employee_grade_tree_view" model="ir.ui.view">
        <field name="name">employee.grade.tree</field>
        <field name="model">hr.grade.grade</field>
        <field name="arch" type="xml">
            <tree string="Grades">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Action of Grade -->
    <record id="action_employee_grade" model="ir.actions.act_window">
        <field name="name">Employee Grade</field>
        <field name="res_model">hr.grade.grade</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of Grade -->
    <menuitem id="menu_grade"
              parent="hr.menu_human_resources_configuration"
              action="action_employee_grade"
              groups="aks_employee_grade_master.group_access_of_grade_rank"
    />


    <!-- this is for form view of Rank -->
    <record id="view_employee_rank_form" model="ir.ui.view">
        <field name="name">employee.rank.form</field>
        <field name="model">hr.rank.rank</field>
        <field name="arch" type="xml">
            <form string="Employees Rank">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="salary_range"/>
                        </group>
                        <field name="description" placeholder="Description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- this is for tree view of Rank -->
    <record id="employee_rank_tree_view" model="ir.ui.view">
        <field name="name">employee.rank.tree</field>
        <field name="model">hr.rank.rank</field>
        <field name="arch" type="xml">
            <tree string="Ranks">
                <field name="name"/>
                <field name="salary_range"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Action of Rank -->
    <record id="action_employee_rank" model="ir.actions.act_window">
        <field name="name">Employee Rank</field>
        <field name="res_model">hr.rank.rank</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu of Rank -->
    <menuitem id="menu_rank"
              parent="hr.menu_human_resources_configuration"
              action="action_employee_rank"
              groups="aks_employee_grade_master.group_access_of_grade_rank"
    />

</odoo>
