<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_report_wizard" model="ir.ui.view">
            <field name="name">sale.report.wizard</field>
            <field name="model">sale.report.wizard</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Sales Report Wizard">
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="period_start" attrs="{'invisible':[('state','=','get')]}"/>
                            <field name="data" readonly="1" filename="name" attrs="{'invisible':[('state','=','choose')]}"/>
                            <field name="period_stop" attrs="{'invisible':[('state','=','get')]}"/>
                            <field name="is_only_doctor" invisible="1"/>
                            <field name="name" invisible="1"/>
                            <field name="state" invisible="1"/>
                            <field name="doctor" attrs="{'required':[('is_only_doctor', '=', True)],'readonly': [('is_only_doctor', '=', True)],'invisible':[('state','=','get')]}"/>
                            <field name="patient" attrs="{'invisible':[('state','=','get')]}"/>
                        </group>
                        <group>
                            <field name="date_type" attrs="{'invisible':[('state','=','get')]}"/>
                            <field name="patient_type" attrs="{'invisible':[('state','=','get')]}"/>
                            <field name="cashier" attrs="{'invisible':['|',('date_type', '=', 'invoice'),('state','=','get')]}"/>
                            <field name="payment_mode" attrs="{'invisible':['|',('date_type', '=', 'invoice'),('state','=','get')]}"/>
                            <field name="insurance_company" attrs="{'invisible':['|',('patient_type', 'in', ('self','both')),('state','=','get')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="sale_report" string="Print PDF" type="object" class="btn-primary" attrs="{'invisible':[('state','=','get')]}"/>
                        <button name="generate_backlog_excel_report" string="Excel" type="object" class="btn-primary" attrs="{'invisible':[('state','=','get')]}"/>
                        <button name="send_sale_report" string="Email Report" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sale_report" model="ir.actions.act_window">
                <field name="name">Sales Report Wizard</field>
                <field name="res_model">sale.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="view_id" ref="sale_report_wizard"/>
                <field name="target">new</field>
        </record>

        <menuitem id="menu_sale_report" name="Sales Report" action="action_sale_report"
                  parent="pragtech_dental_management.dental_report_menu" sequence="1"
                  groups="account.group_account_manager,pragtech_dental_management.group_dental_doc_menu,pragtech_dental_management.group_dental_mng_menu,pragtech_dental_management.group_dental_user_menu"
        />

    </data>
</odoo>