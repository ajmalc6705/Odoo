<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <template id="report_rescheduled">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/><br/>
                        <h3 class="text-center">Rescheduled Appointments</h3>
                        <div class="row mt32" >
                            <div class="col-xs-12" t-if="docs.doctor_ids">
                                <div class="left_panel" style="float:left;width:20%;">
                                    <strong>Doctor:</strong>
                                </div>
                                <div class="right_panel" style="float:left;width:80%;">
                                    <span t-esc="name_string(docs.doctor_ids)"/>
                                </div>
                            </div>
                            <div class="col-xs-12" t-if="docs.patient_ids">
                                <div class="left_panel" style="float:left;width:20%;">
                                    <strong>Patient:</strong>
                                </div>
                                <div class="right_panel" style="float:left;width:80%;">
                                    <span t-esc="name_string(docs.patient_ids)"/>
                                </div>
                            </div>
                        </div>

                        <div class="row mt32">
                            <div class="col-xs-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Sl.No.</th>
                                            <th>Patient</th>
                                            <th>Doctor</th>
                                            <th>From</th>
                                            <th>To</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="sl_no" t-value="0"/>
                                        <t t-foreach="appointments" t-as="appt">
                                            <t t-set="sl_no" t-value="sl_no+1"/>
                                            <tr class="app_line">
                                                <td><t t-esc="sl_no"/> </td>
                                                <td>
                                                    <span t-esc="name_get(appt.patient)"/>
                                                </td>
                                                <td>
                                                    <span t-esc="name_get(appt.doctor)"/>
                                                </td>
                                                <td>
                                                    <span t-field="appt.appointment_sdate"/>
                                                </td>
                                                <td>
                                                    <span t-field="appt.appointment_edate"/>
                                                </td>
                                                <td>
                                                    <span t-field="appt.state"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <report id="report_rescheduled_appointments"
                model="reschedule.wizard"
                string="Rescheduled Appointments"
                menu="False"
                report_type="qweb-pdf"
                name="calendar_scheduler.report_rescheduled"
                file="calendar_scheduler.report_rescheduled"/>
    </data>
</odoo>
