<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_hcare" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="pragtech_dental_management.res_config_settings_view_form_hcare"/>
        <field name="arch" type="xml">
            <div data-key="hcare" position="inside">
                <h2>Calendar Scheduler</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="hide_room_from_calendar_column"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="hide_room_from_calendar_column"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="show_time_in_calendar_scheduler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_time_in_calendar_scheduler"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="slot_duration"/>
                            <field name="slot_duration" widget="float_time"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="slot_height"/>
                            <field name="slot_height"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="resource_order"/>
                            <field name="resource_order"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="show_cancelled"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_cancelled"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="hide_department"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="hide_department"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="check_availability"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="check_availability"/>
                        </div>
                    </div>
                </div>
                <h2>Phone number Validation</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="phone_max_length"/>
                            <br/>
                            <field name="phone_max_length"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="show_country_code"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="show_country_code"/>
                        </div>
                    </div>
                </div>
                <h2>Phone number search</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="validate_phone"/>
                            <br/>
                            <field name="validate_phone"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box" attrs="{'invisible': [('validate_phone', '=', False)]}">
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <label for="phone_min_length"/>
                            <br/>
                            <field name="phone_min_length"/>
                        </div>
                    </div>
                </div>
                <h2>Patient Data Display</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="patient_font_size"/>
                            <br/>
                            <field name="patient_font_size"/>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="patient_bold"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="patient_bold"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
