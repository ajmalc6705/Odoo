<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name = 'sent']" position="after">
                    <group col="4">
                        <field name="insurance_card" invisible="not context.get('show_for_service_bill', False)"
                               context="{'default_name': partner_id, 'default_patient_id': patient, 'default_res_company_id': company_id}"/>
                        <field name="is_insurance_company" force_save="1" invisible="1"/>
                    </group>
                </xpath>

                <xpath expr="//button[@name='invoice_print']" position="replace">
                    <button name="insurance_print" string="Insurance Invoice" icon="fa-print" type="object" attrs="{'invisible':['|',('insurance_card','=',False), ('state', 'not in', ('open','paid'))]}" groups="base.group_user"/>
                </xpath>
                <xpath expr="//button[@name='invoice_print']" position="replace">
                    <button name="invoice_print" string="Patient Receipt" icon="fa-print" type="object" attrs="{'invisible':['|',('is_insurance_company','=',True), ('state', 'not in', ('open','paid'))]}" groups="base.group_user" class="btn-primary"/>
                </xpath>
            </field>
    </record>

</odoo>
