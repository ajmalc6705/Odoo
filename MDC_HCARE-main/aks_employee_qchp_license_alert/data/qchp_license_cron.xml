<odoo>
    <!-- Scheduler for alert the QCHP License -->
    <record id="qchp_license_alert_cron" model="ir.cron">
        <field name="name">QCHP License Alert Scheduler</field>
        <field name="model_id" ref="model_aks_employee_qchp_license"/>
        <field name="state">code</field>
        <field name="code">model._action_send_qchp_license_alert()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="True"/>
    </record>

</odoo>
