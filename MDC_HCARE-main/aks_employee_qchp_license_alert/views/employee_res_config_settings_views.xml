<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_qchp_alert" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.qchp_alert</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr']/div[@class='row mt16 o_settings_container']" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="qchp_license_alert_days_before"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="qchp_license_alert_days_before"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                QCHP License Alert after number of days below mentioned
                            </div>
                            <div class="content-group" attrs="{'invisible': [('qchp_license_alert_days_before','=',False)]}">
                                <div class="mt16">
                                    <field name="number_of_days"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
