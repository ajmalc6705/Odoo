<odoo>
    <data>

        <record id="treatment_invoice_view_inherited" model="ir.ui.view">
            <field name="name">treatment.invoice.form</field>
            <field name="model">treatment.invoice</field>
            <field name="inherit_id" ref="pragtech_dental_management.treatment_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='note']" position="after">
                    <field name="qty"/>
                </xpath>
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="subtotal" sum="Total Amount"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>