<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
	<template id="report_payment_receipt_inherit" inherit_id="account.report_payment_receipt">
	            <xpath expr="//div[@class='page']" position="replace">
	                 <t t-if="not o.advance">
                         <div class="page">
                            <h3><strong>Payment Receipt: <span t-field="o.name"/></strong></h3>
                            <div class="row mt64">
                                <div class="col-xs-6" t-if="o.payment_date">
                                    <strong>Payment Date: </strong> <span t-field="o.payment_date"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6" t-if="o.partner_type">
                                    <t t-if="o.partner_type == 'customer'">
                                        <strong>Customer: </strong>
                                    </t>
                                    <t t-if="o.partner_type == 'supplier'">
                                        <strong>Vendor: </strong>
                                    </t><span t-field="o.partner_id"/>
                                </div>
                                <div class="col-xs-6" t-if="o.payment_method_id">
                                    <strong>Payment Method: </strong><span t-field="o.payment_method_id.name"/>
                                </div>
                            </div>
                            <div class="row mb64">
                                <div class="col-xs-6" t-if="o.amount">
                                    <strong>Payment Amount: </strong><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                 </div>
                                <div class="col-xs-6" t-if="o.communication">
                                    <strong>Memo: </strong><span t-field="o.communication"/>
                                 </div>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Invoice Date</th>
                                        <th>Invoice Number</th>
                                        <th class="text-right">Original Amount</th>
                                        <th class="text-right">Amount Paid</th>
                                        <th class="text-right">Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.invoice_ids" t-as="inv">
                                        <td><span t-field="inv.date_invoice"/></td>
                                        <td><span t-field="inv.number"/></td>
                                        <td class="text-right"><span t-field="inv.amount_total"/></td>
                                        <td class="text-right"><span t-esc="o._get_invoice_payment_amount(inv)" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/></td>
                                        <td class="text-right"><span t-field="inv.residual"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                     </t>
                    <t t-if="o.advance">
                        <div class="page">
                            <div class="text-center">
                                <div style="color:#009688;">
                                     <h2><b>Payment Receipt</b></h2>
                                 </div>
                                <center>
                                    <table name="reciept_payment_table" width="90%">
                                        <colgroup>
                                            <col width='22%'/>
                                            <col width='25%' />
                                            <col width='6%'/>
                                            <col width='22%' />
                                            <col width='25%' />
                                        </colgroup>
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody class="patient_invoice_tbody">
                                            <tr>
                                                <td style="color:#009688;"><strong>Receipt No.:</strong></td>
                                                <td>: <span t-field="o.name"/></td>
                                                <td/>
                                                <td style="color:#009688;"><strong>Receipt Date:</strong></td>
                                                <td>: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y %H:%M')"/></td>

                                            </tr>
                                            <tr>
                                                <!-- <td style="color:#009688;"><strong>Patient name:</strong></td>
                                                <td>: <span t-field="o.partner_id"/></td>
                                                <td/> -->
                                                <td style="color:#009688;"><strong>Payment Date:</strong></td>
                                                <td>: <span t-field="o.payment_date"/></td>

                                                <t t-if="o.partner_type == 'supplier'">
                                                <td style="color:#009688;"><strong>Vendor:</strong></td>
                                                <span t-field="o.partner_id"/></t>
                                            </tr>
                                            <tr>
                                                <td style="color:#009688;"><strong>Payment Method: </strong></td>

                                                <td>: <span t-field="o.payment_method_id.name"/>
                                                </td>
                                               <td></td>
                                                <td style="color:#009688;"><strong>Memo: </strong></td>
                                                <td>: <span t-field="o.communication"/></td>
                                            </tr>
                                            <tr t-if="o.treatment_ids">
                                                <td style="color:#009688;">
                                                    <strong>Treatments: </strong>
                                                </td>
                                                <td colspan="4">:
                                                    <t t-set="len_treatment_ids" t-value="len(o.treatment_ids)"/>
                                                    <t t-set="sl_treatment_ids" t-value="1"/>
                                                    <t t-foreach="o.treatment_ids" t-as="treatment">
                                                        <span t-esc="treatment.name"/>
                                                        <t t-set="sl_treatment_ids" t-value="sl_treatment_ids+1"/>
                                                        <t t-if="len_treatment_ids>=sl_treatment_ids">
                                                            ,
                                                        </t>
                                                    </t>
                                                </td>
                                            </tr>
                                            <!-- <tr>
                                                <t t-if="o.amount">
                                                <td style="color:#009688;"><strong>Payment Amount: </strong></td>
                                                <td>: <span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                                </t>
                                            </tr> -->
                                        </tbody>
                                    </table>
                                    <br/>
                                    <table class="table table-bordered table-striped" name="invoice_line_table">
                                        <colgroup>
                                            <col/>
                                            <col/>
                                            <col width='13%' />
                                            <col width='13%' />
                                            <col width='13%' />
                                            <col width='15%' />
                                            <col width='13%' />
                                            <col width='13%' />
                                        </colgroup>
                                        <thead>
                                            <tr style="border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-bottom:1px solid #000000;">
                                                <th style="color:white;background-color: #009688;border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-bottom:1px solid #000000;">Patient Name</th>
                                                <th  style="color:white;background-color: #009688;border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-bottom:1px solid #000000;" class="text-right">Amount Paid</th>
                                            </tr>
                                        </thead>
                                        <tbody class="invoice_tbody" style="border-bottom: 1px solid black;border-top: 1px solid black;">
                                            <tr >
                                                <td style="border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-bottom:1px solid #000000;"><span t-field="o.partner_id"/></td>
                                                <td style="border-top: 1px solid black;border-left: 1px solid black;border-right: 1px solid black;border-bottom:1px solid #000000;" class="text-right"><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div id="total" class="row pull-right">
                                        <div>
                                            <table class="table-condensed" style="min-width: 250px;max-width: 400px;">
                                                <tr>
                                                    <td>Subtotal</td>
                                                    <td class="text-right">
                                                        <span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                    </td>

                                                </tr>
                                                <tr>
                                                    <td style="border-top:1px solid #000000;border-bottom:1px solid #000000;">
                                                        <strong><h4>Total</h4></strong></td>
                                                    <td style="border-top:1px solid #000000;border-bottom:1px solid #000000;" class="text-right">
                                                        <h4><span t-field="o.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></h4>
                                                    </td>
                                                </tr>
                                                <t>
                                                    <tr>
                                                        <td>
                                                            Cashier : <t t-esc="o.create_uid.name"/> - <i class="oe_form_field text-right oe_payment_label">Paid by :<t t-esc="o.partner_id.name"/> on <t t-esc="o.payment_date"/></i>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <br/><br/>
                                            </table>
                                        </div>
                                        <br/><br/><br/><br/>
                                        <div class="pull-right">
                                             <br/>
                                            <strong>Cashier Signature</strong>
                                        </div>
                                    </div>
                                    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                                    <div class="pull-left">
                                        <strong>Patient Signature</strong>
                                    </div>
                                </center>
                             </div>
                        </div>
                    </t>
	            </xpath>
	</template>
	</data>
</odoo>