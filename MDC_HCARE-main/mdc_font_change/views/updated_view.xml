<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="medical_appointment_form_view" model="ir.ui.view">
        <field name="name">medical.appointment.form</field>
        <field name="model">medical.appointment</field>
        <field name="inherit_id" ref="pragtech_dental_management.medical_appointment_view"/>
        <field name="arch" type="xml">
               <xpath expr="//button[@name='show_inv_due']" position="replace">
                    <button name="show_inv_due" type="object"
                                    groups="pragtech_dental_management.group_dental_doc_menu,pragtech_dental_management.group_dental_mng_menu,pragtech_dental_management.group_dental_user_menu"
                                    attrs="{'invisible': ['|',('patient', '=', False),('amount_due', '=', '0.00')]}">
                                    
                                <i class="fa fa-dollar" style="font-size:23px;color:red"></i>
                                
                                <span style="color:red;" widget="statinfo"> <field name="amount_due"/></span><br/><span style="color:red; margin-left:6px;white-space: unset ! important;"> Unpaid Balance </span>
                            
                    </button>
          
            </xpath>

            
        </field>
    </record>
     <record id="medical_patient_view" model="ir.ui.view">
        <field name="name">medical.patient.form</field>
        <field name="model">medical.patient</field>
        <field name="inherit_id" ref="pragtech_dental_management.medical_patient_view"/>
        <field name="arch" type="xml">
               <xpath expr="//button[@name='show_inv_due']" position="replace">
                   <button name="show_inv_due" type="object"
                            attrs="{'invisible': [('amount_due', '=', '0.00')]}">
                                <i class="fa fa-dollar" style="font-size:23px;color:red"></i>
                                <span style="color:red;" widget="statinfo"> <field name="amount_due"/></span><br/><span style="color:red; margin-left:6px;white-space: unset ! important;"> Unpaid Balance </span>
                                
                            </button>
          
            </xpath>

            
        </field>
    </record>


</odoo>
